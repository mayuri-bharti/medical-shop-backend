# MongoDB Database
MONGO_URL=mongodb://localhost:27017/medical-shop
# OR for MongoDB Atlas:
# MONGO_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/medical-shop

# Redis Cache
REDIS_URL=redis://redis:6379

# Cloudinary Configuration (Get from https://cloudinary.com)
# Required for prescription image uploads
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Secrets (Generate your own random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this

# OTP Provider (twilio | msg91 | mock)
OTP_PROVIDER=twilio

# Twilio Configuration (Get from https://console.twilio.com)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM=+1234567890




# MSG91 Configuration
MSG91_API_KEY=
MSG91_SENDER=MEDSHOP

# Frontend URL
FRONTEND_BASE=http://localhost:5173

# Server Port
PORT=4000

# Environment
NODE_ENV=development




